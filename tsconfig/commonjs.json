{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "sourceMap": true,
    "target": "es5",
    "lib": [
      "es2016"
    ],
    "module": "commonjs",
    "outDir": "lib"
  },
  "include": ["../source/**/*.ts"],
  "exclude": [
    "../source/**/*.test.ts"
  ]
}
